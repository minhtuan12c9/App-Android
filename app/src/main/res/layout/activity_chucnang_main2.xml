<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NormalTest.chucnangMain2">

    <Button
        android:id="@+id/change"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="215dp"
        android:layout_height="52dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#AC46EC"
        android:onClick="doButtonChange"
        android:text="CHANGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="391dp"
        android:layout_height="184dp"
        android:layout_marginTop="68dp"
        android:background="@android:color/darker_gray"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Your Character"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bt1"
        android:layout_width="112dp"
        android:layout_height="122dp"
        android:layout_marginTop="52dp"
        android:onClick="bt1"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/bt2"
        android:layout_width="112dp"
        android:layout_height="122dp"
        android:layout_marginTop="52dp"
        android:onClick="bt2"
        android:src="@drawable/android"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/bt3"
        android:layout_width="112dp"
        android:layout_height="122dp"
        android:layout_marginTop="52dp"
        android:onClick="bt3"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/khung"
        android:layout_width="392dp"
        android:layout_height="125dp"
        android:layout_marginTop="236dp"
        android:background="@color/tieude2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="363dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Enter your title"
        android:inputType="text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/khung"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/khung"
        app:layout_constraintTop_toTopOf="@+id/khung" />
</androidx.constraintlayout.widget.ConstraintLayout>